{% extends 'base.html.twig' %}

{% block title %}Liste des pièces{% endblock %}

{% block body %}
<div>
    <div class="text-center py-3"><h2>Liste des pièces</h2>
    <div class="d-flex justify-content-end px-5"><a class="btn btn-primary" href="/piece/creer">Ajouter</a></div>
    <div class="py-3">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">Nom</th>
              <th scope="col">Description</th>
              <th scope="col">Prix</th>
              <th scope="col">Avis</th>
              <th scope="col">Reference</th>
            </tr>
          </thead>
          <tbody>

          {% for row in pieces %}
            <tr class="table-active">
              <th scope="row"><a class="text-decoration-none text-dark" href="/piece/show/{{row.id}}">{{row.nom}}</a></th>
              <td><a class="text-decoration-none text-dark" href="/piece/show/{{row.id}}">{{row.description}}</a></td>
              <td><a class="text-decoration-none text-dark" href="/piece/show/{{row.id}}">{{row.prix}}</a></td>
              <td><a class="text-decoration-none text-dark" href="/piece/show/{{row.id}}">{{row.avis}}</a></td>
              <td><a class="text-decoration-none text-dark" href="/piece/show/{{row.id}}">{{row.reference}}</a></td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
    </div>
</div>
{% endblock %}
